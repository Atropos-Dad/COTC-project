{
  "server": {
    "host": "ec2-44-204-228-161.compute-1.amazonaws.com",
    "port": 5000
  },
  "logging_config": {
    "console_output": {
      "enabled": true,
      "level": "INFO",
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
      "date_format": "%Y-%m-%d %H:%M:%S"
    },
    "file_output": {
      "enabled": true,
      "level": "DEBUG",
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
      "date_format": "%Y-%m-%d %H:%M:%S",
      "log_dir": "logs",
      "filename": "data_collector.log",
      "max_bytes": 10485760,
      "backup_count": 5
    }
  },
  "metrics": {
    "system_metrics_interval_seconds": 15.0,
    "endpoints": {
      "system_metrics": "ws://ec2-44-204-228-161.compute-1.amazonaws.com:5000/ws/metrics",
      "game_metrics": "ws://ec2-44-204-228-161.compute-1.amazonaws.com:5000/ws/game_metrics"
    }
  }
}
